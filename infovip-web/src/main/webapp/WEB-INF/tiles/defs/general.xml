<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Default Page -->
	<definition name="default.page" template="/WEB-INF/tiles/views/DefaultPage.jsp">
		<put-attribute name="header" value="" />
		<put-attribute name="navbar" value="" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="" />
		<put-list-attribute name="pageCss">
			<add-attribute value="/css/profile.css" />
		</put-list-attribute>
		<put-list-attribute name="pageJs">
			<add-attribute value="/js/ui/UILogger.js" />
			<add-attribute value="/js/ui/UICore.js" />
		</put-list-attribute>
	</definition>

	<!-- Login/Welcome page -->
	<definition name="tile.index" extends="default.page">
		<put-attribute name="body" value="/WEB-INF/web/index.jsp" />
		<put-list-attribute name="pageJs" inherit="true">
			<add-attribute value="js/web/Login.js" />
		</put-list-attribute>
	</definition>

	<definition name="tile.home" extends="tile.index"></definition>


	<!-- Auth failure page -->
	<definition name="tile.authfailed" extends="default.page">
		<put-attribute name="body"
			value="/WEB-INF/web/authentication/AuthFailed.jsp" />
	</definition>
</tiles-definitions>